{
  "parser": "babel-eslint",
  "extends": "airbnb",

  "settings": {
    "ecmascript": 7
  },

  "rules": {
    "new-cap": [2, {
      "capIsNewExceptions": [
        "WidthProvider",
        "Seq",
        "OrderedMap",
        "OrderedSet",
        "List",
        "Map",
        "Seq",
        "Set",
        "Range"
      ]
    }],

    "import/no-unresolved": [0],
    "no-restricted-syntax": [0],
    "no-mixed-operators": [0]
  },

  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  }
}
